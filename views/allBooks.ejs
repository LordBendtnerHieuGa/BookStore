<% include ./layouts/header %>

<div class="row books">
    
    <% books.forEach(function(b){ %>
            <div class="col-xs-12 col-md-6 b">
                <a class="ba" href="/books/<%= b.category %>/<%= b.slug %>">
                    <img class="bimage" src="/bookImages/<%= b.id %>/<%= b.image %>" alt="">
                </a>
                <h3><%= b.title %></h3>
                <h4><%= b.author %></h4>
                <h4>$<%= parseFloat(b.price).toFixed(2) %></h4>
                <a class="btn btn-small vd" href="/books/<%= b.category %>/<%= b.slug %>">View Details</a>
            </div>
        <% }); %>
    
</div>

<% include ./layouts/footer %>